{
  "name": "markview",
  "version": "1.0.0",
  "main": "dist/main/main.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:vite\" \"npm run dev:electron\"",
    "dev:vite": "vite",
    "dev:electron": "tsc -p tsconfig.electron.json && NODE_ENV=development electron .",
    "build": "npm run build:vite && npm run build:electron",
    "build:vite": "vite build",
    "build:electron": "tsc -p tsconfig.electron.json && cp src/main/kitten-server.py dist/main/",
    "dist": "npm run build && electron-builder",
    "dist:mac": "npm run build && electron-builder --mac",
    "dist:win": "npm run build && electron-builder --win",
    "dist:linux": "npm run build && electron-builder --linux",
    "release": "./scripts/release.sh",
    "release:mac": "CSC_IDENTITY_AUTO_DISCOVERY=false npm run dist:mac",
    "setup:kitten-tts": "./scripts/setup-kitten-tts.sh"
  },
  "keywords": [],
  "author": "Your Name",
  "license": "MIT",
  "description": "Beautiful Markdown, at a glance. A minimalist, elegant markdown viewer for macOS.",
  "devDependencies": {
    "@types/node-fetch": "2.6.13",
    "@types/react": "19.1.12",
    "@types/react-dom": "19.1.9",
    "@vitejs/plugin-react": "5.0.2",
    "concurrently": "9.2.1",
    "electron": "38.0.0",
    "electron-builder": "26.0.12",
    "react": "19.1.1",
    "react-dom": "19.1.1",
    "sharp": "0.34.3",
    "typescript": "5.9.2",
    "vite": "7.1.5"
  },
  "dependencies": {
    "@lexical/code": "0.35.0",
    "@lexical/history": "0.35.0",
    "@lexical/link": "0.35.0",
    "@lexical/list": "0.35.0",
    "@lexical/markdown": "0.35.0",
    "@lexical/react": "0.35.0",
    "@lexical/rich-text": "0.35.0",
    "@lexical/table": "0.35.0",
    "@lexical/utils": "0.35.0",
    "@types/mermaid": "9.1.0",
    "@types/uuid": "10.0.0",
    "framer-motion": "12.23.12",
    "lexical": "0.35.0",
